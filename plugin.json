{
  "id": "nodebb-plugin-flowprompt-bot",
  "name": "FlowPrompt Support Bot",
  "description": "Adds optional Flow selector to topic composer and sends events to FlowPrompt",
  "url": "https://flowprompt.ai",
  "library": "./library.js",

  "hooks": [
    {
      "hook": "filter:composer.build",
      "method": "extendComposer"
    },
    {
      "hook": "filter:topic.create",
      "method": "onTopicCreate"
    }
  ],

  "scripts": ["public/client.js"],

  "staticDirs": {
    "public": "./public"
  },

  "nbbpm": {
    "compatibility": "^4.0.0"
  }
}
