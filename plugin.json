{
  "id": "nodebb-plugin-flowprompt-bot",
  "name": "FlowPrompt Support Bot",
  "description": "Adds optional Flow selector to support category composer",
  "library": "./library.js",
  "hooks": [
    { "hook": "filter:composer.controls", "method": "addComposerControl" },
    { "hook": "filter:config.get", "method": "exposeConfig" },
    { "hook": "filter:topic.create", "method": "onTopicCreate" }
  ],
  "staticDirs": {
    "public": "./public"
  },
  "scripts": ["public/client.js"],
  "nbbpm": {
    "compatibility": "^4.0.0"
  }
}
