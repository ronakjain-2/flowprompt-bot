{
  "id": "nodebb-plugin-flowprompt-bot",
  "name": "FlowPrompt Support Bot",
  "description": "Attach optional Flow selection to support topics and send events to FlowPrompt",
  "url": "https://flowprompt.ai",
  "library": "./library.js",
  "hooks": [
    { "hook": "filter:topic.create", "method": "onTopicCreate" },
    { "hook": "filter:composer.build", "method": "filterComposerBuild" },
    { "hook": "filter:config.get", "method": "filterConfigGet" }
  ],
  "staticDirs": {
    "public": "./public"
  },
  "scripts": ["public/client.js"],
  "nbbpm": {
    "compatibility": "^4.0.0"
  }
}
